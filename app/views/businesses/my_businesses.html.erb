<div class="container" style="margin-top: 80px;">
  <div class="panel-business">
    <h1 class="text-center">Minhas Empresas</h1>
    <div class="row">
      <div class="col-xs-12">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Nome Fantasia</th>
                <th>CNPJ</th>
                <th>Email</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @businesses.each do |business| %>
                <tr>
                  <td><%= business.fantasy_name %></td>
                  <td><%= business.cnpj %></td>
                  <td><%= business.email %></td>
                  <td><%= link_to 'Visualizar', business, target: "_blank" %></td>
                  <td><%= link_to 'Editar', edit_business_path(business) %></td>
                  <td><%= link_to 'Remover', business, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="actions text-center">
          <%= link_to 'Nova Empresa', new_business_path, class: 'btn btn-green' %>
        </div>
      </div>
    </div>
  </div>
</div>
