<p id="notice"><%= notice %></p>

<h1>Minhas Empresas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome Fantasia</th>
      <th>CNPJ</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Rua</th>
      <th>Número</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th>CEP</th>
      <th>Razão Social</th>
      <th>Site</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.fantasy_name %></td>
        <td><%= business.cnpj %></td>
        <td><%= business.email %></td>
        <td><%= business.telephone %></td>
        <td><%= business.address_street %></td>
        <td><%= business.address_number %></td>
        <td><%= business.address_complement %></td>
        <td><%= business.address_neighborhood %></td>
        <td><%= business.address_city %></td>
        <td><%= business.address_state %></td>
        <td><%= business.address_zipcode %></td>
        <td><%= business.company_name %></td>
        <td><%= business.website %></td>
        <td><%= business.observation %></td>
        <td><%= link_to 'Visualizar', business, target: "_blank" %></td>
        <td><%= link_to 'Editar', edit_business_path(business) %></td>
        <td><%= link_to 'Remover', business, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Empresa', new_business_path %>
