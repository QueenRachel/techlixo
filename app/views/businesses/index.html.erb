<p id="notice"><%= notice %></p>

<h1>Listing Businesses</h1>

<%= link_to 'Cadastrar Empresa', new_business_path %>

<table>
  <thead>
    <tr>
      <th>Fantasy name</th>
      <th>Cnpj</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Address street</th>
      <th>Address number</th>
      <th>Address complement</th>
      <th>Address neighborhood</th>
      <th>Address city</th>
      <th>Address state</th>
      <th>Address zipcode</th>
      <th>Company name</th>
      <th>Website</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.fantasy_name %></td>
        <td><%= business.cnpj %></td>
        <td><%= business.email %></td>
        <td><%= business.telephone %></td>
        <td><%= business.address_street %></td>
        <td><%= business.address_number %></td>
        <td><%= business.address_complement %></td>
        <td><%= business.address_neighborhood %></td>
        <td><%= business.address_city %></td>
        <td><%= business.address_state %></td>
        <td><%= business.address_zipcode %></td>
        <td><%= business.company_name %></td>
        <td><%= business.website %></td>
        <td><%= business.observation %></td>
      </tr>
    <% end %>
  </tbody>
</table>
